USE [master]

DECLARE @backupstring NVARCHAR(1000)

SET @backupstring = 'BACKUP DATABASE <%= $dbname %>
TO disk= ''<%= $backupfile %>''
WITH FORMAT;'

EXEC(@backupstring)

USE [<%= $dbname %>]

DECLARE @now datetime
SET @now = CURRENT_TIMESTAMP

exec sp_addextendedproperty  
     @name = N'backed_up_by_puppet' 
    ,@value = @now
